{
  "swagger": "2.0",
  "info": {
    "description": "This swagger contains delivery functionality.",
    "version": "1.0.0",
    "title": "Delivery",
    "contact": {
      "name": "Michael Limited",
      "url": "https://linkedin.com/in/michael-azarov-b13564140",
